<div class="container">
  <div class=" form-item">
    <h2 class="margin-y">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}, class: "form-item") do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      
        <%= f.label :password, class: "label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions field">
        <%= f.submit "Log in", class: "btn call-to-action width-100" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>