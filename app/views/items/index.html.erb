<h1>your list</h1>

<%# create new item to add to the list %>
<%= form_with url: @item, method: :get do |form| %>
  <%= form.label :name, "Item name:" %>
  <%= form.text_field :name %>
  <%= form.submit "Add" %>
<% end %>


<%# list of item %>

<% @items.each do |item| %>
  <p><%= item.name %></p>
<% end %>

